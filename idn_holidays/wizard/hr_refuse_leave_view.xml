<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- form view of refuse levae reason -->
    <record id="view_refuse_leave_form" model="ir.ui.view">
        <field name="name">refuse.leave.form</field>
        <field name="model">refuse.leave</field>
        <field name="arch" type="xml">
            <form string="Refuse Leave Reason" >
                <separator string="Reason" colspan="4" />
                <field name="reason" required="1"/>
                <footer>
                    <button name="add_reason" string="Proceed" type="object" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>