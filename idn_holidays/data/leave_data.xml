<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Casual leave -->
        <record model="hr.holidays.status" id="hr_holidays.holiday_status_cl">
            <field name="name" eval="'Legal Leaves '+time.strftime('%Y')"/>
            <field name="color_name">black</field>
            <field name="name2">LL</field>
        </record>

        <!-- Sick leave -->
        <record model="hr.holidays.status" id="hr_holidays.holiday_status_sl">
            <field name="name">Sick Leaves</field>
            <field name="name2">SL</field>
        </record>

        <!-- Compensatory Days -->
        <record model="hr.holidays.status" id="hr_holidays.holiday_status_comp">
            <field name="name">Compensatory Days</field>
            <field name="limit">True</field>
            <field name="color_name">lavender</field>
            <field name="name2">CD</field>
        </record>

        <!--Unpaid Leave -->
        <record model="hr.holidays.status" id="hr_holidays.holiday_status_unpaid">
            <field name="name">Unpaid</field>
            <field name="name2">UP</field>
        </record>

    </data>
</odoo>